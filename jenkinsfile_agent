pipeline{
    agent none

    stages{

        stage('checkout'){
            agent{
                label 'slave2'
            }
            steps{

                echo "This is a checkout stage"
                sleep 5
            }
        }
        stage('Build'){
            agent{
                label 'slave1'
            }
            steps{
                 echo "This is a Build 1"
                 sh "sleep 5"
                }
        }
                
        stage('Test'){
            agent{
                label 'slave2'
            }
            steps{

                echo "This is a Test stage"
                sleep 5
            }
        }

    }
    
}