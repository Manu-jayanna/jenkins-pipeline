pipeline{
    agent none

    stages{

        stage('checkout'){
            agent{
                label 'slave2'
            }
            steps{

                echo "This is a checkout stage"
                sleep 20
            }
        }

        stage('Build'){
            steps{

                echo "This is a Build stage"
                sleep 10
            }
        }

        stage('Test'){
            steps{

                echo "This is a Test stage"
                sleep 5
            }
        }

    }
    
}